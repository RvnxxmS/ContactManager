<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@(ViewBag.Title == "Contact Manager" ? "Contact Manager" : $"{ViewBag.Title} - Contact Manager")</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@400;500;600&display=swap" rel="stylesheet">
    <style>
        body {
            background-color: #FFF5EE;
            font-family: 'Quicksand', sans-serif;
            color: #6F4E37;
        }

        .navbar {
            background-color: #ff69b4;
            padding-left: 0;
            padding-right: 0;
        }

        .navbar-content {
            max-width: 1140px;
            margin: 0 auto;
            padding: 0 15px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            width: 100%;
        }

        .navbar-brand {
            color: #6F4E37;
            font-size: 1.5rem;
            display: flex;
            align-items: center;
        }

            .navbar-brand i {
                margin-right: 5px;
                font-size: 0.9rem;
            }

        .nav-link {
            color: #6F4E37 !important;
        }

            .nav-link:hover {
                color: #8B5A2B !important;
            }

            .nav-link i {
                margin-right: 5px;
                font-size: 0.9rem;
            }

        .btn-primary {
            background-color: #ff69b4;
            border-color: #ff69b4;
            color: white;
        }

            .btn-primary:hover {
                background-color: #ff1493;
                border-color: #ff1493;
            }

        .card {
            border: 1px solid #ff69b4;
            margin-bottom: 15px;
            max-width: 250px;
            margin-left: auto;
            margin-right: auto;
            background-color: #fff;
        }

        .card-body {
            padding: 15px;
            text-align: center;
        }

            .card-body i {
                color: #ff69b4;
                margin-bottom: 8px;
            }

        .card-title {
            font-size: 1.1rem;
            margin-bottom: 5px;
            color: #ff1493;
        }

        .card-text {
            font-size: 0.9rem;
            margin-bottom: 10px;
            color: #6F4E37;
        }

        .btn-primary {
            font-size: 0.9rem;
            padding: 5px 10px;
        }

        .clickable-icon {
            cursor: pointer;
        }

            .clickable-icon:hover {
                opacity: 0.8;
            }

        h1, h5 {
            color: #ff1493;
        }

        .table th {
            background-color: #ffe4e1;
            color: #6F4E37;
        }

        a {
            color: #ff69b4;
        }

            a:hover {
                color: #ff1493;
            }
    </style>
</head>
<body>
    <div class="navbar navbar-expand-lg navbar-dark fixed-top">
        <div class="navbar-content">
            <span class="navbar-brand">
                <i class="fas fa-heart"></i> Contact Manager
            </span>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav mr-auto">
                    @if (!(ViewContext.RouteData.Values["controller"].ToString() == "Home" && ViewContext.RouteData.Values["action"].ToString() == "Index"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Home")">
                                <i class="fas fa-home"></i> Home
                            </a>
                        </li>
                    }
                    @if (!(ViewContext.RouteData.Values["controller"].ToString() == "Contact" && ViewContext.RouteData.Values["action"].ToString() == "Index"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Contact")">
                                <i class="fas fa-address-book"></i> Contacts
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content" style="margin-top: 70px;">
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
        }
        @RenderBody()
        <hr />
        <footer>
            <p>© @DateTime.Now.Year - Contact Manager</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>