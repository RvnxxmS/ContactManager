@{
    ViewBag.Title = "Contact Manager";
}

<h1>Welcome to Contact Manager</h1>
<p>Choose an action below to manage your contacts:</p>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <a href="@Url.Action("Index", "Contact")" onclick="window.location.href='@Url.Action("Index", "Contact")'; return false;" style="color: #ff69b4;">
                    <i class="fas fa-list-ul fa-2x clickable-icon"></i>
                </a>
                <h5 class="card-title">View Contacts</h5>
                <p class="card-text">See all your contacts in a list.</p>
                <a href="@Url.Action("Index", "Contact")" class="btn btn-primary" onclick="window.location.href='@Url.Action("Index", "Contact")'; return false;">Go</a>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <a href="@Url.Action("Add", "Contact")" onclick="window.location.href='@Url.Action("Add", "Contact")'; return false;" style="color: #ff69b4;">
                    <i class="fas fa-plus-circle fa-2x clickable-icon"></i>
                </a>
                <h5 class="card-title">Add Contact</h5>
                <p class="card-text">Add a new contact to your list.</p>
                <a href="@Url.Action("Add", "Contact")" class="btn btn-primary" onclick="window.location.href='@Url.Action("Add", "Contact")'; return false;">Go</a>
            </div>
        </div>
    </div>
</div>

<div class="mt-4">
    <p class="text-center" style="color: #ff1493;">Made by: Raneem Abdelsamea, Saly Bilal, Tamar Lamparadze</p>
</div>